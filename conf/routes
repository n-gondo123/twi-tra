# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

# Home page
GET         /                    controllers.Application.index

# Home page
GET         /home                controllers.Application.home

# Home page
GET         /sign                    controllers.SignController.index

# Mapping to /sign/signIn
POST         /sign/signIn           controllers.SignController.signIn

# Mapping to /sign/signOut
GET         /sign/signOut           controllers.SignController.signOut

# Mapping to /user/list
GET         /user/list           controllers.TwiUserController.list

# Mapping to /user/edit or /user/edit
GET         /user/edit           controllers.TwiUserController.edit

# Mapping to /user/create
POST        /user/create         controllers.TwiUserController.create

# Mapping to /user/update
POST        /user/update         controllers.TwiUserController.update

# Mapping to /tweet/list
GET         /tweet/all           controllers.TweetController.all

# Mapping to /tweet/list
GET         /tweet/follow           controllers.TweetController.follow

# Mapping to /tweet/list
GET         /tweet/list           controllers.TweetController.list

# Mapping to /tweet/index
GET         /tweet/edit           controllers.TweetController.edit

# Mapping to /tweet/create
POST        /tweet/create         controllers.TweetController.create

# Mapping to /tweet/remove:/id
GET        /tweet/remove/:id         controllers.TweetController.remove(id: Int)

# Mapping to /tweet/create/:id
GET        /follow/create/:id         controllers.FollowController.create(id: Int)

# Mapping to /tweet/remove/:id
GET        /follow/remove/:id         controllers.FollowController.remove(id: Int)

## Mapping to /user/remove/<number>
#POST        /user/remove/:id        controllers.UserController.remove(id: Long)
#
#GET         /json/list              controllers.JsonController.list
#POST        /json/create            controllers.JsonController.create
#POST        /json/update            controllers.JsonController.update
#POST        /json/remove/:id        controllers.JsonController.remove(id: Long)
